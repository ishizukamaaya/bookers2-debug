
 <div class='col-lg-8 offset-md-4'>
  <%= render 'searches/form' %>
 </div>

<% if @model == 'user' %>
  <h3>Users search for "<%= @content %>"</h3>
  <%= render 'users/search', users: @records %>

<% else @model == 'book' %>
  <h3>Books search for "<%= @content %>"</h3>
   <%= render 'books/search', books: @records %>
<% end %>
