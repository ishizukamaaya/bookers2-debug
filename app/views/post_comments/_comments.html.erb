<div class="comments">
 <% book.post_comments.each do |post_comment| %>
    <%= image_tag("no_image.jpg") %>
    <%= post_comment.comment %>

    <% if post_comment.user == current_user %>

      <span class="comment-delete">
        <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), remote: true, method: :delete, class: "btn btn-sm btn-danger" %>
      </span>
    <% end %>

    <p><%= link_to post_comment.user.name, user_path(user) %></p>
 <% end %>

</div>

<div class="new-comment">
    <%= form_with(model:[book, post_comment], remote: true) do |f| %>
      <%= f.text_area :comment, class: 'form-control book_comment' %>
        <%= f.submit "送信" %>
    <% end %>
</div>


