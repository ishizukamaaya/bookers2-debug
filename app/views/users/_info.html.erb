<table class='table'>
    <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></tr>
    <tr>
  	  <th>name</th>
  	  <th><%= user.name %></th>
    </tr>
    <tr>
  	  <th>introduction</th>
  	  <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
       <td><%=link_to user.followings.count, user_followings_path(user) %></td>
    </tr>
    <tr>
      <th>followers</th>
       <td><%=link_to user.followers.count, user_followers_path(user) %></td>
    </tr>

</table>

<div class='row'>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
    <% end %>
  <% end %>

  <% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
    <%= link_to 'chatを始める', message_path(user.id), class: "ml-3" %>
  <% end %>
</div>

<div class='row mt-3'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>



